  <div class="col-md-8">

    <h1>Новый Пост</h1>

    <form Action="/posts/update/<%= @post.id %>" method="POST">
      <div class="form-grop mt-3">
        <input name="post[title]" type="text" value="<%= @post.title %>" class="form-control" placeholder="Заголовок" id="exampleInputEmail1" aria-describedby="emailHelp">
      </div>

      <div class="form-grop mt-3">
        <select name="post[topic_id]" class="form-control" aria-label="Default select example">
          <% @topics.each do |topic| %>
              <option value="<%= topic.id %>" <% if @post.topic_id == topic.id %>selected="selected"<% end %>><%= topic.title %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group mt-3">
        <textarea name="post[body]" class="form-control" placeholder="Текст" rows="10"><%= @post.body %></textarea>
      </div>

      <div class="form-group mt-3">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <button type="submit" class="btn btn-primary">Изменить</button>
      </div>
    </form>

  </div>