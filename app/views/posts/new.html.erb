<div class="row">
  <div class="col-md-8">

    <h1>Новый Пост</h1>

    <% if @post.present? %>
      <% @post.errors.each do |attr, msg| %>
        <div class="alert alert-danger" role="alert">
          <%= attr %> <%= msg %>
        </div>
      <% end %>
    <% end %>

    <%= form_for(:post, url: "/posts/create", method: "post") do %>
      <div class="form-grop mt-3">
        <%= label(:post, :title, "Заголовок") %>
        <%= text_field(:post, :title, class: "form-control") %>
      </div>

      <div class="form-grop mt-3">
        <%= label(:post, :topic_id, "Выберите тему") %>
        <%= select(:post, :topic_id, options_from_collection_for_select(@topics, "id", "title"), {}, {class: "form-control"}) %>
      </div>

      <div class="form-group mt-3">
        <%= label(:post, :body, "Текст") %>
        <%= text_area(:post, :body, class: "form-control", rows: "10") %>
      </div>

      <div class="form-group mt-3">
        <%= submit_tag("Создать", class: "btn btn-primary") %>
      </div>
    <% end %>

  </div>

  