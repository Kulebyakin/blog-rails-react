<h3 class="mb-3">Регистрация</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <% f.label :username %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control", placeholder:"Введите Username" %>
  </div>

  <div class="field form-group">
    <% f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Введите Email" %>
  </div>

  <div class="field form-group mb-2">
    <% f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Введите пароль" %>
    <% if @minimum_password_length %>
      <small id="emailHelp" class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
    <% end %>
  </div>

  <div class="field form-group">
    <% f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Подтверждение пароля" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться", class:"btn btn-primary" %>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>